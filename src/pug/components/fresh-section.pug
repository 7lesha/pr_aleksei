section.fresh-section
    .container.fresh-section__row 
        .fresh-section__title What's Fresh
        mixin collection(img, title, description)
            .content
                .content__row-img
                    img.content__img(src=img, alt="картинка")
                .content__block 
                    .content__text Collection
                    .content__title=title 
                    .content__description=description 
                    a(href="#").content__link Shop Now
        +collection('./assets/imgs/img14.png','Waste-Free Kitchen & Lunch','Simple swaps with big environmental impact.')
